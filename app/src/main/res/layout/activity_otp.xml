<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/smallMargin"
        android:layout_marginVertical="@dimen/mediumMargin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Arrow"
            android:src="@drawable/baseline_keyboard_arrow_left_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/medium2Margin"
            android:layout_weight="1"
            android:fontFamily="@font/inter"
            android:gravity="center"
            android:text="Sign up"
            android:textSize="15sp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/whatsEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mediumMargin"
            android:layout_marginVertical="@dimen/mediumMargin"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center_horizontal"
            android:text="Verify OTP"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/enterTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mediumMargin"
            android:layout_marginVertical="@dimen/mediumMargin"
            android:gravity="center"
            android:text="Please enter the code we sent you to email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/whatsEmail" />

        <EditText
            android:id="@+id/firstET"
            android:layout_width="55dp"
            android:layout_height="55dp"

            android:layout_marginHorizontal="@dimen/mediumMargin"
            android:layout_marginVertical="@dimen/mediumMargin"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@+id/secondET"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/enterTV" />

        <EditText
            android:id="@+id/secondET"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="@dimen/smallMargin"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@id/thirdET"
            app:layout_constraintStart_toEndOf="@+id/firstET"
            app:layout_constraintTop_toTopOf="@id/firstET" />

        <EditText
            android:id="@+id/thirdET"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="@dimen/smallMargin"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@+id/fourthdET"
            app:layout_constraintStart_toEndOf="@+id/secondET"
            app:layout_constraintTop_toTopOf="@id/secondET" />

        <EditText
            android:id="@+id/fourthdET"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="@dimen/mediumMargin"
            android:background="@drawable/edit_text_background"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/thirdET"
            app:layout_constraintTop_toTopOf="@id/thirdET" />

        <TextView
            android:id="@+id/didNotTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Didnâ€™t Receive OTP ?"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/recendTV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/secondET"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/recendTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Resend Code"
            android:textColor="#41C485"
            android:textFontWeight="500"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@id/sliderLL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/didNotTV" />

        <LinearLayout
            android:id="@+id/sliderLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/mediumMargin"
            android:layout_marginVertical="@dimen/mediumMargin"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/nextBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="2"

                android:background="@drawable/rounded_corner" />

            <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_corner2"
                android:backgroundTint="#41C485" />
        </LinearLayout>

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="@dimen/mediumMargin"
            android:layout_marginEnd="@dimen/mediumMargin"
            android:layout_marginBottom="@dimen/smallMargin"
            android:backgroundTint="#41C485"
            android:fontFamily="@font/inter_semibold"
            android:text="Verify"
            android:textSize="15sp"
            app:cornerRadius="32dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="3 of 3"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@id/sliderLL"
            app:layout_constraintEnd_toEndOf="@id/sliderLL" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4" />


</LinearLayout>